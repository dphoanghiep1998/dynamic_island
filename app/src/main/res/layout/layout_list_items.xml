<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/civ_senderIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/civ_senderIcon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/civ_senderIcon"
                app:layout_constraintEnd_toEndOf="@id/civ_senderIcon"
                app:layout_constraintStart_toStartOf="@id/civ_senderIcon"
                app:layout_constraintTop_toTopOf="@id/civ_senderIcon" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:fontFamily="@font/f400"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/iv_app_icon"
                app:layout_constraintEnd_toStartOf="@id/iv_app_icon"
                app:layout_constraintTop_toTopOf="@id/iv_app_icon" />

            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/civ_senderIcon"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/on_text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@id/chronometer"
                app:layout_constraintStart_toEndOf="@id/civ_senderIcon"
                app:layout_constraintTop_toTopOf="@id/civ_senderIcon" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/f600"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/on_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/civ_senderIcon"
                app:layout_constraintTop_toBottomOf="@id/tv_app_title" />

            <TextView
                android:id="@+id/sub_tv_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/f400"
                android:textColor="@color/on_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/civ_senderIcon"
                app:layout_constraintTop_toBottomOf="@id/tv_text" />

            <RelativeLayout
                android:id="@+id/ll_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/sub_tv_text">

                <TextView
                    android:id="@+id/mediaPosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/sub_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/mediaDurationText"
                    android:layout_toEndOf="@+id/mediaPosText"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/mediaDurationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/group_message_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_progressbar" />

            <ImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/profile_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/notification_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/group_message_parent" />

            <LinearLayout
                android:id="@+id/notification_top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/notification_picture">

                <RelativeLayout
                    android:id="@+id/notification_material_reply_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/ed_reply"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/reply_bg"
                        android:hint="@string/reply"
                        android:imeOptions="actionSend"
                        android:padding="10dp"
                        android:paddingEnd="@dimen/_40sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_transparent"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_send_reply"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/send_reply_iv"
                        app:tint="@color/blue_400" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/notification_action_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/divider_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_transparent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/notification_top_container" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
