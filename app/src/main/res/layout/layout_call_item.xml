<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconSender"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_apply_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f400"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:gravity="center_vertical"
        android:textColor="#A4A4A9"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@id/tvText"
        app:layout_constraintEnd_toStartOf="@id/notification_action_container2"
        app:layout_constraintStart_toEndOf="@id/iconSender"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppTitle"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:fontFamily="@font/f400"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notification_action_container2"
        app:layout_constraintStart_toEndOf="@id/iconSender"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle" />

    <LinearLayout
        android:id="@+id/notification_action_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/actionCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/ic_phone_circle_red" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/actionAccept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_phone_circle_green" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
