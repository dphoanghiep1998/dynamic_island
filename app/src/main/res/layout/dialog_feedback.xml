<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_12sdp">

    <TextView
        android:id="@+id/tvFeedBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:gravity="center"
        android:text="@string/title_feedback"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:paddingVertical="@dimen/_4sdp"
        android:paddingHorizontal="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_12"
        android:fontFamily="@font/f400"
        android:gravity="top|start"
        android:lines="6"
        android:maxLength="300"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvFeedBack" />

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f400"
        android:text="@string/cancel"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/btnSend"
        android:foreground="@drawable/fg_ripple_effect_12"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <TextView
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_12"
        android:fontFamily="@font/f400"
        android:text="@string/send"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:gravity="center"
        android:textColor="@color/p300"
        android:textSize="@dimen/_14sdp"
        android:foreground="@drawable/fg_ripple_effect_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText" />
</androidx.constraintlayout.widget.ConstraintLayout>